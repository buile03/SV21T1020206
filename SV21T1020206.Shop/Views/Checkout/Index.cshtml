@{
    ViewBag.Title = "Thanh toán";
}

<div class="container">
    <div class="row">

        <!-- Cart Section -->
        <div class="col-md-4 order-2">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Giỏ hàng</span>
                <span class="badge rounded-pill bg-secondary">1</span>
            </h4>

            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between lh-sm">
                    <div>
                        <h6 class="my-0">Tên sản phẩm</h6>
                        <small class="text-muted">Áo 3 lỗ</small>
                    </div>
                    <span class="text-muted">120.000</span>
                </li>
            </ul>

            <div class="card-footer d-flex justify-content-between">
                <span>Tổng cộng (VND)</span>
                <strong>120.000</strong>
            </div>
        </div>

        <!-- Address Section -->
        <div class="col-md-8 order-1">
            <h4 class="mb-3">Địa chỉ nhận hàng</h4>

            <form>
                <div class="row g-3">
                    <div class="col-12">
                        <label for="fullName" class="form-label">Họ và tên</label>
                        <input type="text" class="form-control" id="fullName" placeholder="Họ và tên">
                    </div>

                    <div class="col-12">
                        <label for="username" class="form-label">Tên đăng nhập</label>
                        <input type="text" class="form-control" id="username" placeholder="Tên đăng nhập">
                    </div>

                    <div class="col-12">
                        <label for="email" class="form-label">Email (tuỳ chọn)</label>
                        <input type="email" class="form-control" id="email" placeholder="you@example.com">
                    </div>

                    <div class="col-12">
                        <label for="address" class="form-label">Địa chỉ</label>
                        <input type="text" class="form-control" id="address" placeholder="Địa chỉ nhận hàng">
                    </div>

                    <div class="col-12">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="saveInfo">
                            <label class="form-check-label" for="saveInfo">
                                Lưu thông tin này cho lần sau
                            </label>
                        </div>
                    </div>

                    <div class="col-12">
                        <h5 class="mb-3">Phương thức thanh toán</h5>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="paymentMethod" id="cod" checked>
                            <label class="form-check-label" for="cod">
                                Thanh toán khi nhận hàng
                            </label>
                        </div>
                    </div>
                </div>

                <hr class="my-4">

                <button class="btn btn-primary btn-lg w-100" type="submit">Thanh toán</button>
            </form>
        </div>
    </div>
</div>
