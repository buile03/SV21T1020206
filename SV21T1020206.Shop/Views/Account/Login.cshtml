@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>BL Shop - Đăng nhập</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
    <!-- Font Awesome (Optional) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center align-items-center" style="height: 100vh;">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-lg">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4">Đăng nhập</h2>
                        <form action="~/Account/Login" method="post">
                            @Html.AntiForgeryToken()

                            <!-- Tên đăng nhập input -->
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control" placeholder="Tên đăng nhập" name="username" value="@ViewBag.UserName" autofocus />
                                <label for="username">Tên đăng nhập</label>
                            </div>

                            <!-- Mật khẩu input -->
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" placeholder="Mật khẩu" name="password" />
                                <label for="password">Mật khẩu</label>
                            </div>

                            <!-- Validation message -->
                            <div class="mb-3">
                                @Html.ValidationMessage("Error", new { @style = "color:#f00" })
                            </div>

                            <!-- Submit button -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Đăng nhập</button>
                            </div>
                        </form>

                        <!-- Nút Đăng ký -->
                        <div class="text-center mt-3">
                            <p>Bạn chưa có tài khoản? <a href="~/Account/Register" class="btn btn-link">Đăng ký ngay</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
</body>
</html>