@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>BL Shop - Đổi Mật Khẩu</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body class="bg-light">
    <div class="container">
        <div class="row justify-content-center align-items-center" style="height: 100vh;">
            <div class="col-md-6 col-lg-4">
                <div class="card shadow-lg">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4">Đổi Mật Khẩu</h2>
                        <form action="~/Account/ChangePassword" method="post">
                            @Html.AntiForgeryToken()

                            <!-- Tên đăng nhập input (read-only) -->
                            <div class="form-floating mb-3">
                                <input type="text" class="form-control"
                                       placeholder="Tên đăng nhập"
                                       name="username"
                                       value="@ViewBag.UserName"
                                       readonly />
                                <label for="username">Tên đăng nhập</label>
                            </div>

                            <!-- Mật khẩu cũ input -->
                            <div class="form-floating mb-3">
                                <input type="password"
                                       class="form-control"
                                       placeholder="Mật khẩu cũ"
                                       name="oldPassword"
                                       required />
                                <label for="oldPassword">Mật khẩu cũ</label>
                            </div>

                            <!-- Mật khẩu mới input -->
                            <div class="form-floating mb-3">
                                <input type="password"
                                       class="form-control"
                                       placeholder="Mật khẩu mới"
                                       name="newPassword"
                                       required
                                       minlength="6" />
                                <label for="newPassword">Mật khẩu mới</label>
                            </div>

                            <!-- Xác nhận mật khẩu mới input -->
                            <div class="form-floating mb-3">
                                <input type="password"
                                       class="form-control"
                                       placeholder="Xác nhận mật khẩu mới"
                                       name="confirmPassword"
                                       required
                                       minlength="6" />
                                <label for="confirmPassword">Xác nhận mật khẩu mới</label>
                            </div>

                            <!-- Validation message -->
                            <div class="mb-3">
                                @Html.ValidationMessage("Error", new { @style = "color:#f00" })
                            </div>

                            <!-- Submit button -->
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-lg">Đổi Mật Khẩu</button>
                                <a href="~/Home" class="btn btn-secondary btn-lg">Hủy</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js"></script>
</body>
</html>
